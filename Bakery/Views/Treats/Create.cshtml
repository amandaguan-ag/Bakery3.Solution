@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h4>Add a new Treat</h4>

<p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-weight: 600;"
  })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

    <input type="submit" value="Add new Treat" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>
