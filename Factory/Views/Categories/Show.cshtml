<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>My Factory!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
    @using Factory.Models;

    <h3>Here are all the machines in this category:</h3>

    <ol>
        @foreach (Machine machine in @Model["machines"])
        {
            <li><a href='/categories/@Model["category"].Id/machines/@machine.Id'>@machine.Description</a></li>
        }
    </ol>

    <p><a href='/categories/@Model["category"].Id/machines/new'>Add a new machine</a></p>
    <p><a href='/categories'>Return to category list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
</body>

</html>